<% title = "Log In to Your Profile" %>
<%- include("./partials/header.ejs") %>

<body>
    <div class="container form-class" method ="post" action="/login">
        <div class="row justify-content-center">
            <div class="col-md-9">
              <section class="section">
                <h2 class="text-center head-text"><span class="text-primary">Log</span>In</h2>
                <h5 class="text-center p-text">Don't have an account yet? <a href="./signup">SignUp</a></h5>
              </section>
  
              <form action="/login" method="post">
                <div class="row justify-content-center">
                  <div class="col-lg-5 col-md-7 ">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control bg-body-secondary mb-3" name="username" required>
  
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control bg-body-secondary" name="password" required>
                    <a href="#home">
                      <p class="text-center p-text  mt-3">Forgot Password?</p>
                    </a>
  
                    <button type="submit" class="button">login</button>
                  </div>
                </div>
              </form>
            </div>
        </div>
    </div>
  </body>